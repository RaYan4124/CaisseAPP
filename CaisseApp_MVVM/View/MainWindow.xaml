<Window
    ResizeMode="NoResize"
    Title="MainWindow"
    WindowState="Maximized"
    mc:Ignorable="d"
    x:Class="CaisseApp_MVVM.View.MainWindow"
    x:Name="mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaisseApp_MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  open window all screen mode  -->

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!--  here our grid (total screen) have 2 column  -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <!--  that mean that the 2 columns will share vailable space  equaly  -->
        </Grid.ColumnDefinitions>

        <DataGrid
            AutoGenerateColumns="False"
            Height="730"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Products}"
            Margin="0,0,170,70"
            VerticalAlignment="Stretch"
            Width="550"
            x:Name="ProductsDataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="Produit"
                    Width="4*" />
                <DataGridTextColumn
                    Binding="{Binding Price}"
                    Header="Prix"
                    Width="1*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Click="Show_DB_Button_Click"
            Content="Afficher La BDD"
            Grid.Column="1" />
        <Button
            Click="Add_DB_Button_Click"
            Content="Ajouter&#x0a;Un Produit a La BDD"
            Grid.Column="1"
            Height="40"
            HorizontalAlignment="Left"
            Margin="320,260,0,100"
            Name="AddProductButton"
            VerticalAlignment="Center"
            Width="120" />

        <Button
            Click="ShowScanWindox"
            Grid.Column="1"
            Height="40"
            Margin="0,0,0,160"
            Width="160"
            x:Name="AddListProductButton">
            Ajouter&#x0a; Un Produit A La Liste
        </Button>

        <Button
            Click="PrintTicket"
            Grid.Column="1"
            Height="40"
            Margin="0,300,0,0"
            Width="60"
            x:Name="CollectionButton">
            Encaisser
        </Button>

        <TextBlock
            FontWeight="Bold"
            Margin="370,0,0,50"
            VerticalAlignment="Bottom">
            ToTal :
        </TextBlock>
        <TextBlock
            FontWeight="Bold"
            Margin="420,0,0,50"
            Text="{Binding TotalPrice, Mode=TwoWay}"
            VerticalAlignment="Bottom"
            x:Name="TotalBox" />
    </Grid>
</Window>


