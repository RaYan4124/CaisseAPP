<Window
    Background="#F4F4F4"
    ResizeMode="CanMinimize"
    Title="MainWindow"
    WindowState="Maximized"
    mc:Ignorable="d"
    x:Class="CaisseApp_MVVM.View.MainWindow"
    x:Name="mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaisseApp_MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  open window all screen mode  -->

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!--  here our grid (total screen) have 2 column  -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <!--  that mean that the 2 columns will share vailable space  equaly  -->
        </Grid.ColumnDefinitions>

        <Border
            Background="#CFCFCF"
            Grid.Column="0"
            Height="25"
            Margin="230,0,0,785"
            Width="150"
            x:Name="PadBox">
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                Text="{Binding PadValue}" />
        </Border>

        <!--<DataGrid
            AutoGenerateColumns="False"
            Background="White"
            GridLinesVisibility="None"
            HeadersVisibility="None"
            Height="500"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Products}"
            Margin="0,0,170,250"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
            VerticalAlignment="Stretch"
            Width="550"
            x:Name="ProductsDataGrid">
             binding twoway for viewmodel can read the selected product-->

        <!--<DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    IsReadOnly="True"
                    Width="4*"
                    />
                <DataGridTextColumn
                    Binding="{Binding Quantity}"
                    IsReadOnly="True"
                    Width="0.6*" />
                <DataGridTextColumn
                    Binding="{Binding TotalPrice}"
                    IsReadOnly="True"
                    Width="1*" />
                <!-  readonly cuz datagridtextxolumn want to edit this column on click on default, and our product name set is private so that make error
            </DataGrid.Columns>
        </DataGrid>-->
        <ListBox
            BorderBrush="Black"
            BorderThickness="1.3"
            Height="500"
            ItemsSource="{Binding Products}"
            Margin="0,0,170,250"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
            SelectionMode="Single"
            Width="550">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="1" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="FontSize" Value="14px" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="445" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Name}" />
                        <TextBlock Grid.Column="1" Text="{Binding Quantity, StringFormat=x {0}}" />
                        <TextBlock
                            Grid.Column="2"
                            Padding="20,0,0,0"
                            Text="{Binding TotalPrice}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid
            Grid.Column="1"
            Margin="-175,40,0,0"
            Panel.ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="Show_DB_Button_Click"
                Content="Afficher BDD"
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="0"
                Height="90"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="90" />

            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="Add_DB_Button_Click"
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="0"
                Height="90"
                HorizontalContentAlignment="Center"
                Margin="5"
                Name="AddProductButton"
                VerticalContentAlignment="Center"
                Width="90">
                <TextBlock Text="Ajouter Produit BDD" TextWrapping="Wrap" />
            </Button>

            <Button
                Background="#007ACC"
                BorderThickness="1.5"
                Click="ModifyQtn"
                Content="Mod quantité"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="0"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />

            <Button
                Background="#007ACC"
                BorderThickness="1.5"
                Click="ShowScanWindox"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="1"
                Grid.Row="1"
                Height="90"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="90"
                x:Name="AddListProductButton">
                Scanner
            </Button>

            <Button
                Background="#27AE60"
                BorderThickness="1.5"
                Click="PrintTicket"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="0"
                Grid.Row="2"
                Height="90"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="90"
                x:Name="CollectionButton">
                Paiement
            </Button>

            <Button
                Background="Transparent"
                BorderThickness="1.5"
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="2"
                Height="90"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="90">
                Sous-Total
            </Button>

            <Button
                Background="#D9034F"
                BorderThickness="1.5"
                Click="RemoveProduct"
                Content="Supprimer"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="2"
                Grid.Row="0"
                Height="90"
                HorizontalAlignment="Center"
                Margin="5"
                VerticalAlignment="Center"
                Width="90" />

            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="CorrectionPad"
                Content="Correction"
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />

            <Button
                Background="#007ACC"
                BorderThickness="1.5"
                Click="ShowSearchProduct"
                Content="Recherche"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="2"
                Grid.Row="2"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="#007ACC"
                BorderThickness="1.5"
                Click="ShowDiversProduct"
                Content="Divers"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Grid.Column="3"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />
        </Grid>
        <Grid Grid.Column="1" Margin="-175,390,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="1"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="0"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="2"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="0"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="3"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="0"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="4"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="5"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="6"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="1"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="7"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="2"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="8"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="2"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="9"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="2"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="."
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="3"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="0"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="3"
                Height="90"
                Margin="5"
                Width="90" />
            <Button
                Background="Transparent"
                BorderThickness="1.5"
                Click="NumPadClick"
                Content="00"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="3"
                Height="90"
                Margin="5"
                Width="90" />
        </Grid>

        <TextBlock
            FontWeight="Bold"
            Margin="370,0,0,265"
            Name="TotalChild"
            VerticalAlignment="Bottom">
            Total :
        </TextBlock>
        <Border
            Background="#DDDDDD"
            Grid.Column="0"
            Height="25"
            Margin="140,290,0,0"
            Width="70"
            x:Name="TotalBox">
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                Text="{Binding TotalPrice, Mode=TwoWay}" />
        </Border>

    </Grid>
</Window>


