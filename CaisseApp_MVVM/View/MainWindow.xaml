<Window
    ResizeMode="CanMinimize"
    Title="MainWindow"
    WindowState="Maximized"
    mc:Ignorable="d"
    x:Class="CaisseApp_MVVM.View.MainWindow"
    x:Name="mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaisseApp_MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  open window all screen mode  -->

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!--  here our grid (total screen) have 2 column  -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <!--  that mean that the 2 columns will share vailable space  equaly  -->
        </Grid.ColumnDefinitions>

        <Border
            Background="#bdbdb2"
            Grid.Column="0"
            Height="25"
            Margin="230,0,0,785"
            Width="150"
            x:Name="PadBox">
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                Text="{Binding PadValue}" />
        </Border>

        <DataGrid
            AutoGenerateColumns="False"
            Height="500"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Products}"
            Margin="0,0,170,250"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
            VerticalAlignment="Stretch"
            Width="550"
            x:Name="ProductsDataGrid">
            <!--  binding twoway for viewmodel can read the selected product  -->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="Produit"
                    IsReadOnly="True"
                    Width="4*" />
                <DataGridTextColumn
                    Binding="{Binding Quantity}"
                    Header="Quantité"
                    IsReadOnly="True"
                    Width="0.6*" />
                <DataGridTextColumn
                    Binding="{Binding TotalPrice}"
                    Header="Prix"
                    IsReadOnly="True"
                    Width="1*" />
                <!--  readonly cuz datagridtextxolumn want to edit this column on click on default, and our product name set is private so that make error  -->
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Grid.Column="1"
            Margin="100"
            Panel.ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Click="Show_DB_Button_Click"
                Content="Afficher BDD"
                Grid.Column="1"
                Grid.Row="0"
                Height="80"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="80" />

            <Button
                Click="Add_DB_Button_Click"
                Grid.Column="0"
                Grid.Row="0"
                Height="80"
                HorizontalContentAlignment="Center"
                Margin="5"
                Name="AddProductButton"
                VerticalContentAlignment="Center"
                Width="80">
                <TextBlock Text="Ajouter Produit BDD" TextWrapping="Wrap" />
            </Button>

            <Button
                Click="ModifyQtn"
                Content="Mod quantité"
                Grid.Column="0"
                Grid.Row="1"
                Height="80"
                Margin="5"
                Width="80" />

            <Button
                Click="ShowScanWindox"
                Grid.Column="1"
                Grid.Row="1"
                Height="80"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="80"
                x:Name="AddListProductButton">
                Scanner
            </Button>

            <Button
                Click="PrintTicket"
                Grid.Column="0"
                Grid.Row="2"
                Height="80"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="80"
                x:Name="CollectionButton">
                Paiement
            </Button>

            <Button
                Click="Sub_Total"
                Grid.Column="1"
                Grid.Row="2"
                Height="80"
                HorizontalContentAlignment="Center"
                Margin="5"
                VerticalContentAlignment="Center"
                Width="80">
                Sous-Total
            </Button>

            <Button
                Click="Remove_Product"
                Content="Supprimer"
                Grid.Column="2"
                Grid.Row="0"
                Height="80"
                HorizontalAlignment="Center"
                Margin="5"
                VerticalAlignment="Center"
                Width="80" />

            <Button
                Click="CorrectionPad"
                Content="Correction"
                Grid.Column="2"
                Grid.Row="1"
                Height="80"
                Margin="5"
                Width="80" />
        </Grid>
        <Grid Grid.Column="1" Margin="0,460,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Button
                Click="NumPadClick"
                Content="1"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="0"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="2"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="0"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="3"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="0"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="4"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="1"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="5"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="1"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="6"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="1"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="7"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="2"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="8"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="2"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="9"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="2"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="."
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="0"
                Grid.Row="3"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="0"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="1"
                Grid.Row="3"
                Height="70"
                Margin="5"
                Width="70" />
            <Button
                Click="NumPadClick"
                Content="00"
                FontSize="30"
                FontWeight="Bold"
                Grid.Column="2"
                Grid.Row="3"
                Height="70"
                Margin="5"
                Width="70" />
        </Grid>

        <TextBlock
            FontWeight="Bold"
            Margin="370,0,0,265"
            Name="TotalChild"
            VerticalAlignment="Bottom">
            Total :
        </TextBlock>
        <Border
            Background="#bdbdb2"
            Grid.Column="0"
            Height="25"
            Margin="140,295,0,0"
            Width="70"
            x:Name="TotalBox">
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                Text="{Binding TotalPrice, Mode=TwoWay}" />
        </Border>

    </Grid>
</Window>


