<Window
    Height="300"
    Title="AddProductWindow"
    Width="750"
    mc:Ignorable="d"
    x:Class="CaisseApp_MVVM.View.AddProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaisseApp_MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!--    -->
        <WrapPanel>
            <TextBlock FontWeight="Bold" Margin="20">Nom du Produit :</TextBlock>
            <TextBox
                Height="30"
                Width="200"
                x:Name="ProductName" />

            <TextBlock FontWeight="Bold" Margin="20">Reference Du Produit :</TextBlock>
            <TextBox
                Height="30"
                Width="200"
                x:Name="ProductReference" />

            <TextBlock FontWeight="Bold" Margin="20">Prix Du Produit :</TextBlock>
            <TextBox
                Height="30"
                Width="200"
                x:Name="ProductPrice" />
        </WrapPanel>
        <Button
            Click="Add_DB_Button_Click"
            Height="40"
            Margin="0,150,400,100"
            Width="100"
            x:Name="ValideButton">
            Valider
        </Button>
        <Button
            Click="Close_Window_Button"
            Height="40"
            Margin="400,150,0,100"
            Width="90"
            x:Name="AnnulerButton">
            Annuler
        </Button>
    </Grid>
</Window>
