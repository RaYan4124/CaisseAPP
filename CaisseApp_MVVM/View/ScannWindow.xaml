<Window
    Height="200"
    Title="ScannWindow"
    Width="750"
    mc:Ignorable="d"
    x:Class="CaisseApp_MVVM.View.ScannWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CaisseApp_MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock FontWeight="Bold" Margin="20">Saisissez le code barre du produit :</TextBlock>
        <TextBox
            Height="30"
            Margin="0,0,0,35"
            Width="350"
            x:Name="ProductRef" />

        <Button
            Click="ScannProduct"
            Height="40"
            Margin="0,100,400,0"
            Width="100"
            x:Name="ValideButton">
            Valider
        </Button>
        <Button
            Click="Close_Window_Button"
            Height="40"
            Margin="400,100,0,0"
            Width="90"
            x:Name="AnnulerButton">
            Annuler
        </Button>
    </Grid>
</Window>

